<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="@string/options" />
    <!--http://blog.csdn.net/zwq1457/article/details/8489997-->
    <RingtonePreference
        android:key="pref_notification"
        android:ringtoneType="notification"
        android:title="@string/notification" />
    <CheckBoxPreference
        android:defaultValue="false"
        android:key="pref_vibrate"
        android:title="@string/pref_vibrate" />
    <Preference
        android:defaultValue="#0000FF"
        android:key="take_color"
        android:summary="@string/pref_select_colors_summary"
        android:title="@string/pref_select_colors_tittle" />
    <Preference
        android:key="pref_select_times"
        android:summary=""
        android:title="@string/pref_select_times" />
    <CheckBoxPreference
        android:defaultValue="false"
        android:key="pref_advance_one"
        android:title="@string/pref_advance_one" />
    <CheckBoxPreference
        android:defaultValue="true"
        android:key="hours_12_24"
        android:title="@string/pref_24hours" />
    <Preference
        android:key="add_icon"
        android:title="@string/pref_add_shortcut" />

</PreferenceScreen>